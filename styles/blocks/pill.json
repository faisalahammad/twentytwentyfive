{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Pill",
	"slug": "pill",
	"blockTypes": ["core/heading", "core/paragraph"],
	"styles": {
		"typography": {
			"fontSize": "var:preset|font-size|small",
			"lineHeight": "1",
			"letterSpacing": "normal"
		},
		"border": {
			"color": "currentColor",
			"style": "solid",
			"width": "1px",
			"radius": "999px"
		},
		"spacing": {
			"padding": {
				"top": "0.31rem",
				"right": "var:preset|spacing|20",
				"bottom": "0.31rem",
				"left": "var:preset|spacing|20"
			}
		},
		"elements": {
			"link": {
				"typography": {
					"textDecoration": "none"
				}
			}
		}
	}
}
